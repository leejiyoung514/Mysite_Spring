<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 쿼리문 작성 -->
	<insert id="insert" parameterType="UserVo">    <!--던저준거 EmailVO -->

       <![CDATA[  
          INSERT INTO USERS
          VALUES( SEQ_USER_NO.NEXTVAL,
                  #{name},
                  #{email},
                  #{password},
                  #{gender}
          )
          ]]>

	</insert>

	<!-- selectUserByEmail selectUserByNo -->

	<select id="selectUserByEmailPw" parameterType="map"
		resultType="UserVo">    <!--던저준거 EmailVO -->
       <![CDATA[  
           SELECT NO, NAME
           FROM USERS
           WHERE EMAIL = #{email}
           AND PASSWORD = #{password}
          ]]>
	</select>

    <select id="selectUserBylist" parameterType="map"
		resultType="UserVo">    <!--던저준거 EmailVO -->
       <![CDATA[  
           SELECT NO, NAME
           FROM USERS
           WHERE EMAIL = #{email}
           AND PASSWORD = #{password}
          ]]>
	</select>
    
     <select id="selectUserByno" parameterType="int" resultType="UserVo">    <!--던저준거 EmailVO -->
       <![CDATA[  
           SELECT NAME, EMAIL, PASSWORD, GENDER 
           FROM USERS
           WHERE NO = #{no}
          ]]>
	</select>
    
    
    <update id="update" parameterType="userVo">
     <![CDATA[  
      UPDATE USERS 
      SET NAME=#{name},
          EMAIL=#{email},
          PASSWORD=#{password},
          GENDER=#{gender}
      WHERE NO=#{no}
      ]]>
    </update>
    
  
</mapper>

